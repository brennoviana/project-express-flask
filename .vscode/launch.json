{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug with nodemon",
        "runtimeExecutable": "${workspaceFolder}/express-project/node_modules/.bin/nodemon",
        "runtimeArgs": [
          "--inspect=0.0.0.0:9229",
          "--exec",
          "node --loader ts-node/esm"
        ],
        "program": "${workspaceFolder}/express-project/src/index.ts",
        "cwd": "${workspaceFolder}/express-project",
        "restart": true,
        "sourceMaps": true,
        "protocol": "inspector",
        "console": "integratedTerminal"
      }
    ]
  }